{% for lesson in lessons  %}

	<a href="{{ path('app_one_course', { slug: course.slug , position: lesson.position}) }}" class="flex items-center gap-2 p-2 duration-300 rounded-xl hover:text-col2 {{ lesson.isPremium ? 'text-amber-500' : 'text-col1' }} ">
		<div class="flex items-center justify-between w-full ">
			<div class="flex items-center gap-2">
				{% if lesson.type.type is same as "notion"  %}
					<i class="fa-solid fa-book-open"></i>
				{% elseif lesson.type.type is same as "exercice" %}
					<i class="fa-solid fa-screwdriver-wrench"></i>
				{% elseif lesson.type.type is same as "projet" %}
					<i class="fa-solid fa-rocket"></i>
				{% endif %}
				<p class="p">{{ lesson.title }}</p>
			</div>
			{% if lesson.isPremium  %}
				<i class="fa-solid fa-crown"></i>
			{% endif %}
		</div>
	</a>
{% endfor %}

<div
	class='w-[300px] h-[533px] border border-col1 color-shadow-card flex flex-col rounded-xl justify-between bg-color-reverse cardsArticles mx-auto {{article.languages.language}}'>
	{# Titre #}
	<div
		class='flex justify-between items-center w-full h-[100px]'>
		{# {{ dump(article) }} #}
		<h4 class="flex-grow m-2 h4 text-col2">{{article.title | upper}}</h4>
		<div classname=" mr-3 midFlex">

			<div class="flex flex-wrap items-center justify-center mx-2 my-4">
				<div class="overflow-hidden duration-200 rounded-full size-14 sm:size-16 md:size-20 aspect-square articles-all color-shadow-md bg-neutral-100 hover:bg-neutral-300 btnLanguages flexMid"><img src="{{article.languages.iconLanguage}}" alt="{{article.languages.language}}" class='object-cover m-1'></div>
			</div>
		</div>
	</div>
	<div
		class="flex flex-col px-4">

		{# thumbnail #}

		<img src="{{article.thumbnail}}" alt="{{article.title}}" class='w-[300px] h-[170px] color-shadow-md rounded-lg'>

		<p class="mt-3 h-[120px] p text-col1">{{article.pitch}}</p>


		{# pitch #}


		{# btn accés projet complet #}
	</div>

	<button class="px-4 py-3 mx-auto mt-4 mb-6 duration-200 cursor-pointer bg-col2 rounded-xl hover:opacity-80">
		{% if article.types.type == "projet"  %}
			<a href="{{ path('app_project_detail', { id: article.id }) }}">
				<p class="font-semibold p text-col4 ">Projet Complet</p>
			</a>
		{% elseif article.types.type == "tuto"   %}
			<a href="{{ path('app_tuto_detail', { id: article.id }) }}">
				<p class="font-semibold p text-col4 ">Tutoriel Complet</p>
			</a>
		{% elseif article.types.type == "partage"   %}
			<a href="{{ path('app_share_detail', { id: article.id }) }}">
				<p class="font-semibold p text-col4 ">Article Complet</p>
			</a>
		{% endif %}
	</button>

</div>


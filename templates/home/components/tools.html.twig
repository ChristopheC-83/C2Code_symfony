<h2 class="mx-auto mb-5 h2 text-clip">Les outils dont nous aurons besoin</h2>

<div class="flex flex-wrap justify-between w-full pb-8 gap-y-5 gap-x-8">
    {% for tool in tools %}
        <div class="h-full mx-auto cursor-pointer tool-item bg-color-reverse color-shadow-card rounded-xl" data-tool-id="{{ tool.id }}" onclick="showToolDescription({{ tool.id }})">
            <div class="flex flex-col justify-between flex-wrap w-[145px] h-[200px] gap-3 p-3 border border-col1 rounded-xl">
                <p class="text-xl ">{{ tool.name }}</p>
                <p class="text-lg text-col1">{{ tool.pitch }}</p>
            </div>
        </div>
    {% endfor %}
</div>

{% for tool in tools %}
    <div id="tool-description-{{ tool.id }}" class="tool-description bg-color-reverse w-full p-4 border color-shadow-md border-col1 rounded-xl text-col1 {% if tool.id != 1 %}hidden{% endif %}">
        <div class="flex flex-col">
            <p class="mb-4 underline h4 text-col2 underline-offset-8">{{ tool.name }} :</p>
            <div class="text-lg font-light leading-7 text-col1 ">{{ tool.description|raw }}</div>
        </div>
    </div>
{% endfor %}


      },

    
]  %}

<h2 class="mx-auto mb-5 h2 text-clip">Les langages que nous utiliserons ensemble</h2>

<div class="flex justify-between w-full">
	{% for language in languages %}
		<div class="text-col1 icoFontawesome" data-id="{{ language.id }}" onclick="showDescription({{ language.id }})">
			{{ language.iconLanguage|raw }}
		</div>
	{% endfor %}
</div>

{% for language in languages %}
	<div id="description-{{ language.id }}" class="description {% if language.id != 1 %}hidden{% endif %} w-full p-4 border color-shadow-md border-col1 rounded-xl text-col1 h2 mt-3 bg-color-reverse">
		<div class="flex flex-col">
			<p class="underline p text-col2 underline-offset-8">{{language.language}} : </p>
			<div class='h3'>{{ language.description|raw }}</div>
		</div>
	</div>
{% endfor %}

{% extends 'base.html.twig' %}

{% block title %}Connexion | C2Code
{% endblock %}
{# Metedesc fixe pour une page donnée #}
{% block meta_description %}
	Bienvenue chez le Compagnon de code. Connectez-vous pour interagir avec d'autres développeurs !
{% endblock %}

{% block body %}
	<section class="customContainer">
		<h3 class="mx-auto my-5 h3 text-clip xs:my-6 md:my-7">Connectez-vous !</h3>
		{% if error %}
			<div class='text-lg text-center text-red-400'>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="customForm">
			<form action="{{ path('app_login') }}" method="post">
				<label for="username">Email:</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}" required>
				<label for="password">Mot de Passe:</label>
				<input
				type="password" id="password" name="_password" required>


				{# If you want to control the URL the user is redirected to on success
				<input type="hidden" name="_target_path" value="/account"> #}

				<button type="submit" class='buttonValidation'>Je me connecte</button>
			</form>
			<p class="mx-auto h4 text-col2">OU</p>
			<a href="{{ path ('app_register') }}">
				<button class='buttonSecondary'>Je crée mon compte votre compte</button>
			</a>
		</div>
	</div>

{% endblock %}

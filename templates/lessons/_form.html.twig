{{ form_start(form) }}
{# {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }} #}
{{ form_row(form.title) }}
<div class="flex justify-between w-full gap-x-3">
	<div class="w-1/12">{{ form_row(form.is_visible) }}</div>
	<div class="w-1/12">{{ form_row(form.is_premium) }}</div>
	<div class="w-1/6">{{ form_row(form.position) }}</div>
	<div class="flex-grow">{{ form_row(form.course) }}</div>
	<div class="flex-grow">{{ form_row(form.type) }}</div>
</div>
{{ form_row(form.text) }}
{{ form_row(form.time) }}
{{ form_errors(form.text) }}
<div class="flex justify-center w-full"><button class="w-full mx-auto text-center buttonValidation xs:w-3/4 md:w-1/2">{{ button_label|default('Créer la leçon') }}</button></div>
{{ form_end(form) }}
